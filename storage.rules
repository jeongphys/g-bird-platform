rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 앨범 이미지: 인증된 사용자만 읽기/쓰기
    match /albums/{albumId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // 공지사항 이미지: 모든 사용자 읽기, 인증된 사용자만 쓰기
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
